<div class="edit_account">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Aguardando confirmação do email: <%= resource.unconfirmed_email %></div>
    <% end %>
    <hr />
    <div class="field">
      <%= f.label :nova_senha %><p>(deixe em branco caso não deseje alterar a senha)<br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em>A senha deve ter ao menos <%= @minimum_password_length %> caracteres.</em>
      <% end %>
      </p>
    </div>

    <div class="field">
      <%= f.label :confirmar_nova_senha %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <hr />
    <div class="field">
      <%= f.label :Senha_atual %> <p>(necessário para realizar alterações)<br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
      </p>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "Atualizar" %>
    </div>
    <br />
  <% end %>
  <hr />
  <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>
  <hr />
  <%= link_to "Voltar", :back %>
</div>