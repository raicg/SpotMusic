<div class="column is-full-mobile is-one-quarter-desktop is-one-third-tablet song-item">
  <div class="columns is-mobile song-item2"> 
    <div class="column is-2-mobile is-2-desktop is-2-tablet play_button">
      <%= link_to "javascript:void(0);", class: "has-text-white", data: { song: url_for(song.file), url: new_recently_heard_path(album_id: song.album.id) } do %>
        <i class="fas fa-play-circle fa-3x"></i>
      <% end %>
    </div>
    <div class="column has-text-left">
      <h2 class="is-size-5"><%= song.title %></h2>
      <% if current_page?(searches_path)%>
        <p><%= song.album.artist.name %></p>
      <% elsif current_page?(categories_path)%>
        <p><%= song.album.artist.name %></p>
      <% elsif current_page?(albums_path)%>
        <span class="icon"><i class="fas fa-play"></i></span><%= song.played_count %>
      <% end %>
    </div>
    <div class="column is-2-mobile is-2-desktop is-2-tablet is-pulled-right favorite">
      <%= favorite_button(song) %>
    </div>
  </div>
</div>